            android:layout_marginTop="13dp" />
        <ImageView
            android:id="@+id/red7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginTop="17dp" />
        <ImageView
            android:id="@+id/red8"
            android:layout_width="100dp"
            android:layout_height="100dp"
